---
import { classNaming }  from "$scripts/_className"
import TableHead from "./TableHead.astro"
import TableRow from "./TableRow.astro"
let blk: TableBlock<string, string[], string[][]>
({ blk } = Astro.props)

const presets = {
  def: "",
};

const cls = classNaming("", blk.classes, blk.preset, presets)
---

<div id="tablelllll" class={cls}>
  <table class="table is-fullwidth is-striped is-hoverable">
    {() => {
      if (blk.$th) {
        return (
          <TableHead head={blk.$th}/>
        )
      }
      return <thead />
    }}
    <!-- <TableBody body={blk.$trs} /> -->
    <tbody>
      {blk.$trs.map(row => {
        return (
          <TableRow row={row} />
        )
      })}
    </tbody>
  </table>
</div>
