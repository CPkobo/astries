---
import BlockControl from "$lib/Aries/BlockControl.astro"
let itm: FlowItem<IsSingle>
let order: number
({ itm, order } = Astro.props)
---
<div className="box">
  <div className="flow-box">
    <div class="flow-order">
      <p class="is-size-4">{order}</p>
    </div>
    <div class="flow-text">
      <BlockControl blks={itm.$blks} />
    </div>
  </div>
</div>

<style lang="scss">
  div.flow-box {
    display: flex;
  }

  div.flow-order {
    width: 5rem;
    padding: 1rem;
    text-align: center;
    vertical-align: middle;
    background-color: teal;
    color: teal;
    flex-grow: 0;
  }

  div.flow-text {
    width: 100%;
    padding: 1rem;
    flex-grow: 1;
  }

  div.triangle {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    margin-left: auto;
    margin-right: auto;
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 26px 15px 0 15px;
    border-color: teal transparent transparent transparent;
  }
</style>
