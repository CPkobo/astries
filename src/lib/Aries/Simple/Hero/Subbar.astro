---
import { classNaming }  from "$scripts/_className"
let blk: HeroBlock<string>
({ blk } = Astro.props)

const presets = {
  def: "is-small is-primary",
};

const cls = classNaming("hero", blk.classes, blk.preset, presets)
---

<section class={cls}>
  <div class="hero-body">
    <h1 class="title">{blk.$title}</h1>
  </div>
</section>

<style>
  h1 {
    text-align: center;
  }
</style>
