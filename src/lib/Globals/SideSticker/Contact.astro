---
  import { profile } from "$envs/profile";
  import FilledBar from "$lib/Util/FilledBar.astro";
// import ContactButton from "../lib/CTAs/contact.svelte"
---

<aside class="stick-contact has-text-centered pb-3">
  <FilledBar title="ご連絡はこちら" />
  <ul class="mb-4 list-contacts">
    <li class="is-size-5">
      <span class="icon mr-1">
        <i class="fa fa-phone" aria-hidden="true"></i>
      </span>{profile.Tel}
    </li>
    <li class="is-size-6">
      <span class="mr-1">
        <i class="fa fa-envelope" aria-hidden="true"></i>
      </span>
      <a href={`mailto:${profile.Email}`}>{profile.Email}</a>
    </li>
  </ul>
</aside>

