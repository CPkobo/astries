---
import BlockControl from "$lib/Blocks/SimpleBlockControl.astro"
let itm: FeaturesItem<IsSingle>
({ itm } = Astro.props)

const presets = {
  def: "",
};

---

<div class="feature-box">
  <h4 class="is-size-4">
    <span class="icon is-large fa-2x mr-2">
      <i class={itm.icon} aria-hidden="true"></i>
    </span>
    {itm.$title}
  </h4>
  <BlockControl blks={itm.$blks} />
</div>

<style lang="scss">
  h4 {
    border-bottom: dotted 2px teal;
    line-height: 0;
  }

  div.feature-box {
    width: 100%;
    padding: 0.5rem;
    margin-bottom: 3rem;

    &:hover {
      background-color: green;
      transition: 0.5s;
    }
    @media (min-width: 1024px) {
      width: calc(100% - 2rem * 1);
      max-width: calc(50% - 2rem * 2);
      margin-right: auto;
      margin-left: auto;
    }
  }
</style>
