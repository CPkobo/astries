---
import { classNaming }  from "$scripts/_className"
let blk: HeroBlock<IsSingle>
({ blk } = Astro.props)

const presets = {
  def: "",
};

const cls = classNaming("", blk.classes, blk.preset, presets)
---

<section class={cls}>
  <div class="aries-subbar">
    <h1 class="aries-subbar-title">{blk.$title}</h1>
  </div>
</section>

<style lang="scss">
  @use "../../../../styles/colors.scss" as c;
  h1 {
    text-align: center;
  }
  div.aries-subbar {
    background-color: c.$primary-nega;
    color: c.$primary-nega-text;
  }
</style>
