---
import { classNaming }  from "$scripts/_className"
let blk: HeroBlock<IsSingle>
({ blk } = Astro.props)

const presets = {
  def: "",
};

const cls = classNaming("hero", blk.classes, blk.preset, presets)
---

<section
  class={cls}
  id="hero"
  style=`background-image: url(${blk.src});`
>
  <div class="hero-body">
    <div class="top-title">
      <h1 class="title is-size-1-desktop is-size-2-tablet is-size-3-mobile">
        {blk.$title}
      </h1>
      <h2 class="subtitle mt-5 is-size-3-desktop is-size-4-tablet is-size-5-mobile">
        {blk.$subtitle}
      </h2>
      {() => {
        if (blk.cta) {
          return (<button>cta</button>)
        }
        return
      }}
    </div>
  </div>
</section>


<style lang="scss">
  section#hero {
    background-blend-mode: darken;
    background-size: cover;
    background-repeat: no-repeat;
    padding: 8rem;
    display: flex;
    background-color: var(--t-fg);
    background-repeat: no-repeat;
    background-size: cover;
    min-height: 25vw;
    color: white;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-height: 80vh;

    div.hero-body {
      min-width: 100vw;
      @media (min-width: 1024px) {
        min-width: 80vw;
      }
    }
  
    div.top-title {
      vertical-align: middle;
      text-align: center;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 2rem;
    }

    /* div.top-title:hover {
      transition: opacity 0.3s;
      opacity: 0.8;
    } */
  }
</style>
