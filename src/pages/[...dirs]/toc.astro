---
import { navs, staticDirs } from "$src/_envs/paths"
import { profile } from "$src/_envs/profile"
import { getNavmenu } from "$scripts/_i18n"
import Base from "$layouts/Base.astro"
import TocCardWrap from "$lib/Tocs/tocCardWrap.astro"

export async function getStaticPaths() {
   return staticDirs
}
const {dirs} = Astro.params
const navmenu = await getNavmenu(String(dirs), "toc", "ja")
const direction: AstriesDirection = {
	head: {
		lang: 'ja',
		title: profile.SiteName,
		description: `${profile.SiteName} | ${navmenu.category}`
	},
	hasHeaderMenu: true,
	hasFooterMenu: true,
	hasSideMenu: false,
	pagetype: 'LP',
	navigations: navs.ja
}
---

<Base direction={direction}>
   <TocCardWrap toc={navmenu} slot="main" />
</Base>

