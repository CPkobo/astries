{
  "compilerOptions": {
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "lib": [
      "es2020",
      "DOM"
    ],
    "baseUrl": "./",
    "paths": {
      "$src/*": [
        "src/*"
      ],
      "$envs/*": [
        "src/_envs/*"
      ],
      "$layouts/*": [
        "src/layouts/*"
      ],
      "$lib/*": [
        "src/lib/*"
      ],
      "$scripts/*": [
        "src/scripts/*"
      ],
      "$styles/*": [
        "src/styles/*"
      ]
    }
  }
}